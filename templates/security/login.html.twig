{% extends 'base.html.twig' %}

{% block body %}
    <div class="container">
        <h1>Connection</h1>
        <form action="{{ path('security_login') }}" method="post">
            <div class="form-group">
                <input placeholder="Adresse email ..." required name="_username"
                type="text" class="form-control">
            </div>
            <div class="form-group">
                <input placeholder="Mot de passe..." required name="_password"
                type="password" class="form-control">
            </div>
            <div class="form-group">
                <button type="submit" class="btn btn-success">Connection !</button>
                <a href="{{ path('security_registration') }}" class="btn btn-danger ml-5">Pas encore inscrit ?</a>
            </div>
        </form>
    </div>
{% endblock %}
