{% extends 'base.html.twig' %}

{% block body %}

    <div class="container">
        <div class="col-md-12 text-center">
            <h1>Inscription</h1>
        </div>
        {{ form_start(form) }}
        {{ form_row(form.username, {'label':'Nom d\'utilisateur','attr':{'placeholder': 'Ton Prenom'}}) }}
        {{ form_row(form.email, {'label':'Ton Email','attr':{'placeholder': 'Email'}}) }}
        {{ form_row(form.password, {'label':'Mot de Passe','attr':{'placeholder': 'Ton Mot de passe'}}) }}
        {{ form_row(form.confirm_password, {'label':'Confirme Mot de Passe','attr':{'placeholder': 'Ton Mot de passe'}}) }}
        <button type="submit" class="btn btn-success">Inscription !</button>
        {{ form_end(form) }}
    </div>
{% endblock %}
