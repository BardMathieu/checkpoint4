{% extends 'base.html.twig' %}

{% block title %}{% endblock %}

{% block body %}
    {% if reservation is empty  %}
        <div class="row">
            <div class="col-md-12">
                <h1 class="text-center"> vous n'avez aucune réservation</h1>
            </div>
            <div class="col-md-12 text-center">
                <a href="/#spectacles" class="btn btn-success">Voir nos Spectacles</a>
            </div>
        </div>
        {% else %}
        <div class="row">
            <div class="col-md-12 text-center">
                <h1>Votre derniere reservation</h1>
            </div>
            {% for reservation in reservation %}
                <div class="col-md-12 text-center">
                    <h2>Vous avez réservé {{ reservation.nbpersonne }} place(s) pour un total de {{ reservation.price }} Euros</h2>
                </div>
            {% endfor %}
        </div>
        <div class="container my-5">
            <div class="media">
                <img src="{{ infospectacle.Image }}" class="align-self-end mr-3" alt="...">
                <div class="media-body">
                    <h5 class="mt-0">Spectacle de {{ infospectacle.ville }}</h5>
                    <p>Le Spectacle auras lieu le {{ infospectacle.date }} a 20 Heures</p>
                    <p>Réglement sur place</p>
                    <a href="#" class="btn btn-warning">Envoyer réservation par Email</a>
                </div>
            </div>
        </div>
        <div class="row">
            <div class="col-md-12 text-center">
                <h1>Vos Anciennes reservations</h1>
            </div>
        </div>
            <div class="container">
            {% for infolastspectacle in infolastspectacle %}
                <div class="media my-4">
                    <img src="{{ infolastspectacle.Image }}" class="align-self-end mr-3" alt="...">
                    <div class="media-body">
                        <h5 class="mt-0">Spectacle de {{ infolastspectacle.ville }}</h5>
                        <p>Le Spectacle auras lieu le {{ infolastspectacle.date }} a 20 Heures</p>
                    </div>
                </div>
            {% endfor %}
            </div>
    {% endif %}
{% endblock %}
